{
  "name": "lit-element-starter-ts",
  "version": "0.0.0",
  "description": "A web-based Markdown editor, built using CodeMirror 6 and Web Components",
  "main": "lime-editor.js",
  "module": "lime-editor.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --raw 'npm run build:watch' 'npm run serve'",
    "build": "rollup -c",
    "build:watch": "rollup -cw --no-compact --no-treeshake",
    "clean": "rimraf dist",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:fix": "npm run lint:lit-analyzer && npm run lint:eslint:fix",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:eslint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "npm run lint:fix && prettier src/* --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf dist/docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file dist/docs/lime-editor.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css dist/docs/",
    "docs:serve": "es-dev-server --root-dir=dist/docs --node-resolve --watch",
    "docs:dev": "npm run docs && concurrently --kill-others --raw 'npm run docs:gen:watch' 'npm run docs:serve'",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile dist/custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch --open demo",
    "test": "web-test-runner src/test/**/*.test.ts --watch --config web-test-runner.config.mjs",
    "test:watch": "tsc && karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "tas && karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "tsc && karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat dist/lime-editor.bundled.js | gzip -9 | wc -c ; rm dist/lime-editor.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "editor",
    "markdown-editor",
    "markdown",
    "zmarkdown"
  ],
  "author": "Amaury Carrade <amaury@carrade.eu>",
  "license": "BSD 3-Clause License",
  "dependencies": {
    "@codemirror/commands": "^0.17.0",
    "@codemirror/highlight": "^0.17.0",
    "@codemirror/history": "^0.17.0",
    "@codemirror/lang-markdown": "^0.17.0",
    "@codemirror/language": "^0.17.0",
    "@codemirror/search": "^0.17.0",
    "@codemirror/state": "^0.17.0",
    "@codemirror/view": "^0.17.0",
    "lit-element": "^2.3.1",
    "zestedesavoir-standards": "^1.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^3.3.11",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/dev-server-import-maps": "0.0.5",
    "@web/test-runner": "^0.12.16",
    "chai": "^4.2.0",
    "concurrently": "^6.0.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^1.3.0",
    "karma-scss-preprocessor": "^4.0.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^7.1.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^3.2.0",
    "web-component-analyzer": "^1.0.3"
  }
}
